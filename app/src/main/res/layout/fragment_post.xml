<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developers.hack.cs.kagerou.fragment.PostFragment"
    android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_editText"
        android:layout_gravity="center_horizontal"
        android:hint="タイトル"
        android:singleLine="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/content_editText"
        android:layout_gravity="center_horizontal"
        android:hint="あなたの悩みは？"
        android:gravity="left|top"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="16dp"
        android:layout_below="@+id/title_editText"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/post" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="投稿"
        android:id="@+id/post"
        android:layout_gravity="center_vertical|bottom|right"
        android:backgroundTint="#00a8b2"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="8dp" />

</RelativeLayout>
